<%- include('includes/header') %>
<div class="container">
    <h2 class="text-center">Rick and Morty Characters: <%= totalCount %></h1>
    <hr>
    <div class="row"> 
        <%- include('forms/charactersSearch') %>
        <%- include('includes/pagination') %>
    </div>
    <table class="table table-striped table-bordered" width="100%">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Status</th>
                <th>Species</th>
                <th>Download PDF</th>
            </tr>
        </thead>
        <tbody>
            <% characters.forEach(character => { %>
            <tr>
                <td><img src="<%= character.image %>" height="50"></td>
                <td><%= character.name %></td>
                <td><%= character.status %></td>
                <td><%= character.species %></td>
                <td><a class="nav-link" href="/characters/generate-profile-doc/<%= character.id %>">PDF</a></td>
            </tr>
            <% }); %>
        </tbody>
    </table>
</div>
<%- include('includes/footer') %>